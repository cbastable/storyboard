<% if signed_in? %>
<%= form_for(@story.stats.build(story_id: @story.id, viewer_id: @user.id),
              remote: true) do |f| %>
  <%= f.hidden_field :story_id %>
  <%= f.hidden_field :viewer_id %>
  <% if @story.price > 0 %>
  <%= f.submit "Pay with Storyboard Points", id: "storyboard-point-purchase", class: "btn btn-primary" %>
  <% elsif @story.price == 0 %>
  <%= f.submit "Pay with Storyboard Points", id: "storyboard-point-purchase", class: "btn btn-primary", disabled: true %>              
  <% end %>
<% end %>

