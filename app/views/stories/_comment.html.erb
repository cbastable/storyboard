<%= form_for(@story.comments.build(story_id: @story.id, user_id: current_user.id),
              remote: true) do |f| %>
  <%#= render 'shared/error_messages', object: @comment %>
  <div><%= f.hidden_field :story_id %></div>
  <div><%= f.hidden_field :user_id %></div>
  <div><%= f.text_area :content, placeholder: "Click to comment..." %></div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>