<% if @stories.count > 0-%>
$('.stories').append('<%= escape_javascript(render(partial: 'all_stories')) %>');
$('a.hook').attr('href', '<%= stories_path(page: (params[:page].to_i || 2)+1, search: params[:search], per_page: params[:per_page] || @per_page) %>').show();
<% else -%>
$('a.hook').hide();
<% end -%>