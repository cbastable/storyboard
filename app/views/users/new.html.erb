<% provide(:title, 'Sign up') %>
<h1>Become a member!</h1>

<div class="row">
  <div id="member-left" class="span7"><%=render 'shared/about' %></div>
  <div id="member-right" class="span5 offset8">
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>