<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @board_stories.any? %>
        <div class="user_avatars">
          <% @board_stories.each do |story| %>
            <%= link_to story.title, @story %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>