<% if current_user.boards.find_by_name_and_story_id("Read later", story.id).nil? %>
  <div id="<%=story.id %>-read-later">
    <%= form_for(current_user.boards.build(story_id: story.id),
              remote: true) do |f| %>
              <%= f.hidden_field :name, value: "Read later" %>
              <%= f.hidden_field :story_id, value: story.id %>
              <%= f.submit "Read later", class: "btn btn-small"%>
    <% end %>
  </div>
<% else %>
 <%= render 'browse_pages/story_added_to_read_later' %>
<% end %>